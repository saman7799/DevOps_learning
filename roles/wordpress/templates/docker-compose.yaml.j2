version: '3.9'
services:
  wordpress:
    container_name: wp
    image: {{ host_ip }}/wordpress:latest
    volumes:
      - ./wp_data:/var/www/html
    ports:
      - 8080:80
    restart: always
    environment:
      - WORDPRESS_DB_HOST=db
      - WORDPRESS_DB_USER=wordpress
      - WORDPRESS_DB_PASSWORD=wordpress
      - WORDPRESS_DB_NAME=wordpress
    networks:
      - app-net
      - wp-net
networks:
  app-net:
    name: app-net
  wp-net:
    external: true