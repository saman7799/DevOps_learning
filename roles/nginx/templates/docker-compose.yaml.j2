version: '3.9'
services:
  webserver:
    container_name: webserver
    image: nginx:latest
    restart: always
    ports:
    - 80:80
    - 443:443
    volumes:
      - ./config/nginx.conf:/etc/nginx/conf.d/default.conf
    networks:
      - wp-net
      - web-net
      
networks:
  wp-net:
    external: true
  web-net:
    name: web-net